<h1 id='main_title'>Сервис библиографических описаний</h1>
<div id='main'>
<h3>Создание нового списка</h3>
<%= form_tag '/lists', method: :post do %>
  <p>
    <%= label_tag :"Название списка" %><br>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= submit_tag %>
  </p>
<% end %>


<%= link_to 'Назад', lists_path %>
</div>
